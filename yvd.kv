Main_page:

<Main_page>:
    cols: 1
    size_hint: (0.6, 0.7)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    Image:
        source: "download_icon.jpg"
        size_hint: (1, None)

    Label:
        id: status_label
        font_size: 20
        text: "YouTube video downloader by Tanjil Turzo"
        spacing: "10dp","10dp"
        size_hint: 1, .4

    Switch:
        id: switch_audio
        size_hint: (1, 0.5) 
        on_active: root.switch_toggle(self, self.active)

    Switch:
        id: video_res
        size_hint: (1, 0.5)
        on_active: root.video_res_toggle(self, self.active)
        

    TextInput:
        id: download_link
        hint_text: "paste link here"
        padding: ("10dp", "10dp", "20dp", "10dp")
        spacing: "10dp","10dp"
        size_hint: 1, .3
        focus: True
        multiline: False
           
    Button:
        id: status_button
        text: "Download"
        on_press: root.start_download(self)
        spacing: "10dp","10dp"
        size_hint: 1, .4           
